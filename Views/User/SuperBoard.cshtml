@{ Layout = "~/Views/Shared/_Landing.cshtml";
    ViewData["Title"] = "User Login";    
    }
   
    

<style>

    body{
        background-image: url('/yellowBus/New-Project-2022-03-10T182548.462.jpg');
        background-attachment: fixed;
        background-size: cover;
    }
    section{
       
        
    }
    h5{
        text-align: center;
        text-align: fixed;
        color: green;
    }
     .sidebar {
            background-color: transparent;
            color: green;
            width: 220px;
            height: 100%;
            float: left;
            position: fixed;
            font-family: sans-serif;
            padding: 1%;
          box-shadow: rgba(0, 0, 0, 0.17) 0px -23px 25px 0px inset, rgba(0, 0, 0, 0.15) 0px -36px 30px 0px inset, rgba(0, 0, 0, 0.1) 0px -79px 40px 0px inset, rgba(0, 0, 0, 0.06) 0px 2px 1px, rgba(0, 0, 0, 0.09) 0px 4px 2px, rgba(0, 0, 0, 0.09) 0px 8px 4px, rgba(0, 0, 0, 0.09) 0px 16px 8px, rgba(0, 0, 0, 0.09) 0px 32px 16px;;
        }

        .sidebar ul {
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .sidebar li {
            display: block;
            padding: 10px;

            border-bottom: 1px solid green;
        }

        .sidebar a {
            color:green;
            font-weight: bolder;
            text-decoration: transparent;
            box-shadow: rgba(0, 0, 0, 0.17) 0px -23px 25px 0px inset, rgba(0, 0, 0, 0.15) 0px -36px 30px 0px inset, rgba(0, 0, 0, 0.1) 0px -79px 40px 0px inset, rgba(0, 0, 0, 0.06) 0px 2px 1px, rgba(0, 0, 0, 0.09) 0px 4px 2px, rgba(0, 0, 0, 0.09) 0px 8px 4px, rgba(0, 0, 0, 0.09) 0px 16px 8px, rgba(0, 0, 0, 0.09) 0px 32px 16px;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            font-weight: bolder;
            background-color:grey;
            min-width: 200px;
            z-index: 1;
        }

        .dropdown:hover .dropdown-content {
            display: block;
            text-transform: uppercase;
            font-family: sans-serif;
        }
</style>


    

<section>
    

<body>
    <div class="sidebar" style="margin-left: -4%; margin-top: -1%">
        <h4>Super DashBoard</h4>
        <ul>
            <li class="dropdown">
                <a href="#">User Mgt</a>
                <ul class="dropdown-content">
                    <li><a asp-controller="Admin" asp-action="Create">Register Staff</a></li>
                    <li><a asp-controller="Admin" asp-action="GetAll">View All Staffs</a></li>
                    <li><a asp-controller="Role" asp-action="Create">Create Role</a></li>
                    <li><a asp-controller="User" asp-action="ListAllUsers">View All Users</a></li>
                </ul>
            </li>
        </ul>

        <ul>
            <li class="dropdown">
                <a href="#">Driver Mgt</a>
                <ul class="dropdown-content">
                    <li><a asp-controller="Driver" asp-action="GetAll">View Drivers</a></li>
                    <li><a asp-controller="Bus" asp-action="GetAll">View Busses</a></li>
                </ul>
            </li>
        </ul>
    </div>
       @if (TempData["Success"] != null)
    {
        <script>
            window.onload = function () {

                alert("@TempData["Success"]")
            }
        </script>
    }
</body>

</html>

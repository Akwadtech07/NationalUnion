@{
    Layout = "~/Views/Shared/_Landing.cshtml";
    ViewData["Title"] = "User Login";
}



<style>
    body {
        background-image: url('/yellowBus/WhatsApp-Image-2022-04-08-at-6.32.09-PM-750x430.jpeg');
        background-attachment: fixed;
        background-size: cover;
    }

    section {}

    h5 {
        text-align: center;
        text-align: fixed;
        color: green;
    }

    .sidebar {
        background-color: white;
        color: green;
        width: 220px;
        height: 100%;
        float: left;
        position: fixed;
        padding: 1%;
        box-shadow: rgba(0, 0, 0, 0.17) 0px -23px 25px 0px inset, rgba(0, 0, 0, 0.15) 0px -36px 30px 0px inset, rgba(0, 0, 0, 0.1) 0px -79px 40px 0px inset, rgba(0, 0, 0, 0.06) 0px 2px 1px, rgba(0, 0, 0, 0.09) 0px 4px 2px, rgba(0, 0, 0, 0.09) 0px 8px 4px, rgba(0, 0, 0, 0.09) 0px 16px 8px, rgba(0, 0, 0, 0.09) 0px 32px 16px;
    }

    .sidebar ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .sidebar li {
        display: block;
        padding: 10px;

        border-bottom: 1px solid green;
    }

    .sidebar a {
        color: black;
        font-weight: bolder;
        text-decoration: transparent;
    }

    .dropdown {
        position: relative;
        display: inline-block;
        box-shadow: rgba(0, 0, 0, 0.17) 0px -23px 25px 0px inset, rgba(0, 0, 0, 0.15) 0px -36px 30px 0px inset, rgba(0, 0, 0, 0.1) 0px -79px 40px 0px inset, rgba(0, 0, 0, 0.06) 0px 2px 1px, rgba(0, 0, 0, 0.09) 0px 4px 2px, rgba(0, 0, 0, 0.09) 0px 8px 4px, rgba(0, 0, 0, 0.09) 0px 16px 8px, rgba(0, 0, 0, 0.09) 0px 32px 16px;
    }

    .dropdown-content {
        display: none;
        position: absolute;
        font-weight: bolder;
        background-color: green;
        min-width: 200px;
        z-index: 1;
    }

    .dropdown:hover .dropdown-content {
        display: block;
    }
</style>
<section>

    <body>
        <div class="sidebar" style="margin-left: -4%; margin-top: -1%">
            <h4>Manager DashBoard</h4>
            <ul>
                <li class="dropdown">
                    <a href="#">Ticket Mgt</a>
                    <ul class="dropdown-content">
                        <li><a asp-controller="Ticket" asp-action="GetAll">View All Tickets</a></li>
                    </ul>
                </li>

            </ul>

            <ul>
                <li class="dropdown">
                    <a href="#">Park Mgt</a>
                    <ul class="dropdown-content">
                        <li><a asp-controller="Driver" asp-action="GetAll">View Drivers</a></li>
                        <li><a asp-controller="Bus" asp-action="GetAll">View Buses</a></li>
                    </ul>
                </li>

            </ul>
        </div>
        @if (TempData["Success"] != null)
        {
            <script>
                window.onload = function () {

                    alert("@TempData["Success"]")
                }
            </script>
        }
        @if (TempData["Tick"] != null)
        {
            <script>
                window.onload = function () {

                    alert("@TempData["Tick"]")
                }
            </script>
        }
    </body>

    </html>
</section>

@{
    Layout = "~/Views/Shared/_DriverLanding.cshtml";
    ViewData["Title"] = "User Login";
}



<style>
    body {
        background-image: url('/yellowBus/BuslandingPage.jpg');
        background-attachment: fixed;
        background-size: cover;
    }

    h5 {
        text-align: center;
        text-align: fixed;
        color: green;
    }

    .note {
        color: red
    }

    .sidebar {
        background-color: gold;
        color: green;
        width: 223px;
        height: 98%;
        float: left;
        position: fixed;
        padding: 1%;
        margin-top: 1%;
        border-radius: 5%;
        box-shadow: rgba(0, 0, 0, 0.17) 0px -23px 25px 0px inset, rgba(0, 0, 0, 0.15) 0px -36px 30px 0px inset, rgba(0, 0, 0, 0.1) 0px -79px 40px 0px inset, rgba(0, 0, 0, 0.06) 0px 2px 1px, rgba(0, 0, 0, 0.09) 0px 4px 2px, rgba(0, 0, 0, 0.09) 0px 8px 4px, rgba(0, 0, 0, 0.09) 0px 16px 8px, rgba(0, 0, 0, 0.09) 0px 32px 16px;
    }

    .sidebar ul {
        list-style: none;
        margin: 0;
        padding: 0;
        box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;
    }

    .sidebar li {
        display: block;
        padding: 10px;

    @*border-bottom:1pxsolidgreen;*@
    }

    .sidebar a {
        color: black;
        font-weight: bolder;
        text-decoration: green;
    }

    .dropdown {
        position: relative;
        display: block;
    @*box-shadow:1px2px3px4pxrgba(62,58,58,0.599);*@
    }

    .dropdown-content {
        display: none;
        position: absolute;
        font-weight: bolder;
        background-color: grey;
        min-width: 200px;
        z-index: 1;


    }

    .dropdown:hover .dropdown-content {
        display: block;
    @*flex-direction:column;*@
    }

    .success {
        text-align: right;
        color: green;
        text-decoration-style: wavy;

    }
</style>

<body>

    <div class="sidebar" style="margin-left: -5%; margin-top: -1%">
        <h4>Driver DashBoard</h4>
        <div id="logo"><img src="/yellowBus/logo3.jpg" alt="center"></div>
        <div class="note">

            <marquee behavior="" direction="left">
                <p style="font-weight: bolder,font-family:italics">Alwatys Remember Not To Drink And Drive</p>
            </marquee>
        </div>

        @* <h2>@ViewBag.Message</h2> *@
        <ul>
            <li class="dropdown">
                <a href="#">Ticket Mgt</a>
                <ul class="dropdown-content">
                    @* <li><a asp-controller="Ticket" asp-action="Create">Create Ticket</a></li> *@
                    <li><a asp-controller="Ticket" asp-action="GetAllAvailableTickets">View Tickets</a></li>
                    @* <li><a asp-controller="Ticket" asp-action="BuyTicket">Buy Tickets</a></li>
                    <li><a asp-controller="Driver" asp-action="FundWallet">Fund Wallet</a></li> *@
                </ul>
            </li>
            <!-- other links -->
        </ul>

        <ul>
            <li class="dropdown">
                <a href="#">Bus Mgt</a>
                <ul class="dropdown-content">
                    <li><a asp-controller="Bus" asp-action="Create">Create Bus</a></li>
                    <li><a asp-controller="Bus" asp-action="GetAll">View Buses</a></li>
                </ul>
            </li>
            <!-- other links -->
        </ul>
    </div>

    @if (TempData["Success"] != null)
    {
        <script>
            window.onload = function () {

                alert("@TempData["Success"]")
            }
        </script>
    }
    @if (TempData["Updated"] != null)
    {
        <script>
            window.onload = function () {

                alert("@TempData["Updated"]")
            }
        </script>
    }
    @if (TempData["Fund"] != null)
    {
        <script>
            window.onload = function () {

                alert("@TempData["Fund"]")
            }
        </script>
    }

</body>

</html>

